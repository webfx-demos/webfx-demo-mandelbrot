    <build>
        <plugins>

            <!-- Generating the source artifact for another GWT compilation (ex: KBS) -->
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>append-main</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <phase>compile</phase>
                        <configuration>
                            <target>
                                <!-- Copying the JavaScript file of the webWorker (compiled by TeaVM) -->
                                <copy file="${project.basedir}/../webfx-demo-mandelbrot-webworker-teavm/target/teavm/classes.js" tofile="${project.build.outputDirectory}/public/dev.webfx.demo.mandelbrot.webworker.MandelbrotWebWorker.js"/>
                                <!-- Copying the WebAssembly file of the computation (compiled by TeaVM) -->
                                <copy file="${project.basedir}/../webfx-demo-mandelbrot-webassembly-teavm/target/teavm/classes.wasm" tofile="${project.build.outputDirectory}/public/classes.wasm"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Calling the GWT maven plugin to compile the gwt module into javascript -->
            <plugin>
                <groupId>net.ltgt.gwt.maven</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
            </plugin>

        </plugins>
    </build>

    <!-- Redefining the GWT profile here so it can be activated locally when invoking this pom directly -->
    <!-- Note: activating a profile locally here will trigger the properties defined in the root pom -->
    <profiles>
        <profile><id>gwt-compile</id></profile>
    </profiles>

