        <artifactId>webfx-demo-mandelbrot</artifactId>
        <groupId>dev.webfx</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>webfx-demo-mandelbrot-webworker-teavm</artifactId>

    <dependencies> <!-- Generated by WebFx -->
        
        <dependency>
            <artifactId>webfx-demo-mandelbrot-webworker</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>webfx-platform-teavm-json-impl</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>webfx-platform-teavm-webassembly-impl</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>webfx-platform-teavm-webworker-impl</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
    
    </dependencies>

    <properties>
        <plugin.teavm.param.mainClass>dev.webfx.demo.mandelbrot.webworker.teavm.TeaVmMandelbrotWorkerEntryPoint</plugin.teavm.param.mainClass>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.teavm</groupId>
                <artifactId>teavm-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>append-main</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <echo append="true" file="target/teavm/classes.js">${line.separator}main()</echo>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

